<!--pages/Login/Login.wxml-->
<view class="container">
  <view class="userinfo">
    <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 获取头像昵称 </button>
    <block wx:else>
      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </block>

    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <block wx:if="{{name}}">
          <view class="weui-cell__bd">
          Wellcom {{name}}! If it not you information, Please close this page. Thanks.
          </view>
        </block>
          <view class="font-break">
          {{qrCodeResult}}
          </view>
      </view>
    </view>
  </view>

  <view class="btn-area" id="buttonContainer">
    <!-- <button type="primary"  open-type="getPhoneNumber" bindgetphonenumber='login'>Login</button> -->
    <button type="primary" disabled="{{loginBtnDisabled}}" bindtap='scanQRCodeLogin'>Scan QRCode Login</button>
    <button  type="default" bindtap='cancelLogin'>Cancel</button>
  </view>
</view>
