<view class="container">
  <view class="page-body">
    <view class="page-section">
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">Location</view>
          </view>
          <view class="weui-cell__bd">
            <picker bindchange="bindLocationChange" disabled="{{disabledEdit}}" value="{{locationIndex}}" range="{{locationData}}">
              <view class="weui-input">{{locationData[locationIndex]}}</view>
            </picker>
          </view>
        </view>
      </view>
    </view>
  </view>

  <view class="btn-area" id="buttonContainer">
    <button type="primary" disabled="{{disabledEdit}}" bindtap="saveAction">Save</button>
  </view>
</view>