.config-item {
  display: flex;
  flex-direction: row;
  padding: 40rpx;
  padding-left: 40rpx;
  align-content: center;
  border-bottom: 1rpx solid #f5f5f5;
  background-color: #fff;
}

.config-item-text-group {
  width: 95%;
}

.config-item-text {
  color: #333;
  font-size: 28rpx;
}

.config-item-text-en {
  color: #999;
  font-size: 32rpx;
}

.config-item-icon {
  font-size: 30rpx;
  color: #333;
  text-align: right;
  align-content: center;
}

.btn-group {
  position: fixed;
  bottom: 0;
}