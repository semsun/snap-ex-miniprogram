<!--pages/purpose_view/pubposeView.wxml-->
<view class="container">
  <view>
    <block wx:if="{{editFlag}}">
    <view class="origin_position item">
      <view class="content_container">
        <view class="ctx_title">报销类型 Type</view>
        <view class="ctx_content">餐饮 Dinner</view>
      </view>
    </view>
    <view class="item">
      <view class="content_container">
        <view class="ctx_title">报销金额 Amount</view>
        <view class="ctx_content">5,897.00 CNY</view>
      </view>
    </view>
    <view class="item">
      <view class="content_container">
        <view class="ctx_title">备注 Note</view>
        <view class="ctx_content">GZ to HK</view>
      </view>
    </view>
    </block>
    <block wx:else>
    <view class="origin_position">
      <view class="content_container">
        <view class="ctx_edit_title">票据类型 Type</view>
        <view class="type_gap">
          <view class="row_style">
            <view class="purpose_type_unsel view_align_middle_center">
              <view class="icon_place"></view>
              <view class="purpose_txt">交通 Travel ticket</view>
            </view>
            <view class="purpose_type_sel view_align_middle_center">
              <view class="icon_place"></view>
              <view class="purpose_txt">餐饮 Dinner</view>
            </view>
          </view>
          <view class="row_style">
            <view class="purpose_type_unsel view_align_middle_center">
              <view class="icon_place"></view>
              <view class="purpose_txt">住宿 Hotel</view>
            </view>
            <view class="purpose_type_unsel view_align_middle_center">
              <view class="icon_place"></view>
              <view class="purpose_txt">医疗 Medical</view>
            </view>
          </view>
          <view class="row_style">
            <view class="purpose_type_unsel view_align_middle_center">
              <view class="icon_place"></view>
              <view class="purpose_txt">团建 Team building</view>
            </view>
            <view class="purpose_type_unsel view_align_middle_center">
              <view class="icon_place"></view>
              <view class="purpose_txt">其它 Others</view>
            </view>
          </view>
        </view>
      </view>
    </view>
    <view class="item_edit type_to_item">
      <view class="content_container row_style">
        <view>
          <view class="ctx_edit_title">报销货币 Currency</view>
          <view class="ctx_edit_content">餐饮 Dinner</view>
        </view>
        <view class="navigator-arrow"></view>
      </view>
    </view>
    <view class="item_edit">
      <view class="content_container">
        <view class="ctx_edit_title">报销金额 Amount</view>
        <view class="ctx_edit_content">5,897.00 CNY</view>
      </view>
    </view>
    <view class="item_edit">
      <view class="content_container">
        <view class="ctx_edit_title">备注 Note</view>
        <view class="ctx_edit_content">GZ to HK</view>
      </view>
    </view>
    </block>
    <view>
      <view class="content_container">
        <view class="item_title">票据拍照 Invoice or evidence photo</view>
        <view class="item_content"></view>
      </view>
    </view>
  </view>

  <view class="btn_area_local" id="buttonContainer">
    <button wx:if="{{!editFlag}}" class="btn_add">添加票据 Add</button>
    <block wx:else>
      <button class="btn_del" bindtap="saveAction">删除 Delete</button>
      <button class="btn_edit" bindtap="addPurpose">编辑 Edit</button>
    </block>
  </view>
</view>
