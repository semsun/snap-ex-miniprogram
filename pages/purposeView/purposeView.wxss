/* pages/purpose_view/pubposeView.wxss */
@import '../components/weui-wxss/dist/style/weui.wxss';
@import '../components/weui-wxss/dist/style/index.wxss';

.content_container {
  margin-left: 32rpx;
  margin-right: 32rpx;
}
.ctx_title {
  font-size: 28rpx;
  color: #767676;
  width: 226rpx;
}

.ctx_content {
  font-size: 28rpx;
  color: #252525;
  text-align: right;
  width: 460rpx;
}

.ctx_edit_title {
  font-size: 28rpx;
  color: #333333;
  text-align: left;
}

.ctx_edit_content {
  font-size: 32rpx;
  color: #333333;
  text-align: left;
}

.item_title {
  font-size: 28rpx;
  color: #252525;
  margin-top: 30rpx;
}

.item_content {
  margin-top: 30rpx;
  width: 686rpx;
  height: 332rpx;
  background: #E7E7E7;
}

.item {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 104rpx;
}

.item_edit {
  background: #FFFFFF;
  width: 100%;
  height: 104rpx;
  margin-top: 2rpx;
}

.origin_position {
  margin-top: 32rpx;
}

.type_to_item {
  margin-top: 32rpx;
}

.type_gap {
  margin-top: 30rpx;
}

.row_style {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.btn_area_local {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 150rpx;
  background: #FFFFFF;
  box-shadow: 0 -1px 10px 0 rgba(0,0,0,0.12);
}

.btn_del {
  background: #FFFFFF;
  border: 2rpx solid #333333;
  width: 332rpx;
  height: 90rpx;
  border-radius: 0;

  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #333333;
  letter-spacing: 0;
  text-align: center;
}

.btn_edit {
  background: #DB0011;
  width: 332rpx;
  height: 90rpx;
  border-radius: 0;

  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #FFFFFF;
  letter-spacing: 0;
  text-align: center;
}

.btn_add {
  background: #DB0011;
  width: 686rpx;
  height: 96rpx;
  border-radius: 0;

  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #FFFFFF;
  letter-spacing: 0;
  text-align: center;
}

.icon_place {
  width: 64rpx;
  height: 64rpx;
  background: #D8D8D8;
}

.purpose_txt {
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #252525;
  text-align: center;
  margin-top: 18rpx;
}

.purpose_type_unsel {
  width: 344rpx;
  height: 200rpx;
  background: #FFFFFF;
  border: 2rpx solid #D7D8D6;
}

.purpose_type_sel {
  width: 344rpx;
  height: 190rpx;
  background: #FFFFFF;
  border: 2rpx solid #00847F;
  border-bottom: 12rpx solid #00847F;
}

.view_align_middle_center {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}