/* pages/dashboard/dashboard.wxss */
@import '../components/weui-wxss/dist/style/weui.wxss';

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

/* // 定义.listview设置容器样式 */

.listview {
  padding: 10px 0 20%;
  /* align-content: center; */
  width: 100%;
}

/* // 定义.text-content设置文本样式 */

.text-content {
  padding: 10px;
  align-content: center;
  border-bottom: 1rpx solid #f5f5f5;
  background-color: #fff;
}

.addBtn{
  position:fixed; 
  bottom:0;
  width:100%;
}
