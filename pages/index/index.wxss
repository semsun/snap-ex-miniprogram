/* pages/dashboard/dashboard.wxss */
@import '../components/weui-wxss/dist/style/weui.wxss';

.userinfo {
  /* display: flex; */
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 32rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #252525;
  font-size: 16pt;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* // 定义.listview设置容器样式 */

.list-title {
  margin: 32rpx;
  color: #252525;
  font-size: 14pt;
}

.listview {
  padding: 0 0 20%;
  /* align-content: center; */
  width: 100%;
}

.list-item-icon {
  margin: 20rpx 50rpx 0 20rpx;
}

/* // 定义.text-content设置文本样式 */

.item-view {
  margin: 32rpx;
  padding: 32rpx;
  box-sizing: border-box;
}

.text-content {
  align-content: center;
  border-bottom: 1rpx solid #f5f5f5;
  background-color: #fff;
}

.item-title {
  color: #404040;
  font-size: 16pt;
}

.item-amount {
  text-align: right;
  color: #404040;
  font-size: 16pt;
}

.item-desc {
  color: #929292;
  font-size: 13pt;
}

.item-status-draft {
  float: right;
  letter-spacing: 0.18px;
  width: 160rpx;
  color: #252525;
  font-size: 12pt;
  border-radius: 10px; /*设置圆角*/
  text-align: center;
  line-height: 14px;
  background-color: #fb3;
}

.item-status-submitted {
  float: right;
  letter-spacing: 0.18px;
  width: 230rpx;
  font-family: UniversNextforHSBC-Light;
  font-size: 12pt;
  color: #fff;
  border-radius: 10px; /*设置圆角*/
  text-align: center;
  line-height: 14px;
  background-color: #008580;
}

.btn-group {
  position: fixed;
  bottom: 0;
}
